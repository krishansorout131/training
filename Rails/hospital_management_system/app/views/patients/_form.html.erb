<%= form_for @patient do |form| %>
    
    <div>
      <%= form.label :name  %>
      <%= form.text_field :name %>
    </div><br>
  
    <div>
      <%= form.label :gender  %>
      <%= form.radio_button :gender, "Male" %>
      <%= form.label :Male  %>
      <%= form.radio_button :gender, "Female" %>
      <%= form.label :Female  %>
    </div><br>
  
    <div>
      <%= form.label :dob  %>
      <%= form.date_field :dob %>
    </div><br>
  
    <div>
      <%= form.label :address  %>
      <%= form.text_field :address %>
    </div><br>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  