<%= flash[:message]%>
<% if @user.errors.any? %>
  <% @user.errors.each do |error| %>
    <p class="errors"><%= error.full_message  %></p>
  <% end %><br>
<% end %> 
<div class="newuser">
<%= form_for @user do |form| %>
    
    <div>
      <%= form.label :name ,"Username :" %>
      <%= form.text_field :name, class: "input" %>
    </div><br>
    <div>
      <%= form.label :email ,"Email :" %>
      <%= form.email_field :email, class: "input" %>
    </div><br>
    
    <%= form.label :password, "Enter Your Password: ",class: "signup" %>
    <%= form.password_field :password , class: "input"%><br><br>
    
    <%= form.label :password_confirmation, "Confirm Your Password:", class: :label %>   
    <%= form.password_field :password_confirmation , class: "input"%><br><br>
    <div>
      <%= form.label :dob , "Date Of Birth :" %>
      <%= form.date_field :dob , class: "input"%>
    </div><br>
  
    <div>
      <%= form.label :address , "Address :" %>
      <%= form.text_area :address , class: "input"%>
    </div><br><br>

    <div>
      <%= form.check_box :terms_of_services %>
      <%= form.label :terms_of_services, "Terms" %>
    </div><br>
  
    <div>
      <%= form.submit "Register", class: "subbtn"%>
    </div>
  <% end %>
  </div>